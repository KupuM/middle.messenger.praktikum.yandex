{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2017",
        "declaration": false,
        "module": "commonjs",
        "rootDir": "./src",
        "baseUrl": "./src",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "typeRoots": [".src/types"]
}
