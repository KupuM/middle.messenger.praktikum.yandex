{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es6",
        "lib": ["es2017", "dom"],
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "./src",
        "baseUrl": "./src",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "typeRoots": [".src/types"]
}
